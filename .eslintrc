{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 160
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "import/order": [
      "error",
      {
        "newlines-between": "always"
      }
    ],
    "import/prefer-default-export": "off",
    "import/no-named-as-default": "off",
    "semi": [
      "error",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ]
  },
  "env": {
    "mocha": true
  }
}
